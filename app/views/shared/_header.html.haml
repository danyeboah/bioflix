%section#top-header.row
  %h1.col-md-2
    = link_to "BioFLiX", root_path
  = if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue",user_queue_items_path(current_user)
      %li= link_to "People",user_friendships_path(current_user)
    = form_tag search_videos_path, class: "span5 for-search" do
      %input.search-query(name="search_term" type="text" placeholder= "Search for videos here")
      %button.btn.shift_right(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome #{current_user.first_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              =link_to "Sign Out", logout_path
