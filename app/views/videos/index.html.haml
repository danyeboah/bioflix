%article.video_category
  %header
    -@categories.each do |category|
      %h3
        = link_to category.name, category
      %br
      .videos.row
        -category.recent_videos(4).each do |video|
          .video.col-sm-3
            =link_to video_path(video) do
              =image_tag(video.small_cover, size: "166x236")
              %p
                =video.title
      %br
      %hr

       